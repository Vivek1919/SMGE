<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Login.Register_Activity"
    android:background="@color/white">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <LinearLayout
            android:id="@+id/linearLayout1012"
            android:layout_width="match_parent"
            android:layout_height="436dp"
            android:layout_marginTop="4dp"
            android:background="@color/white"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.428"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion1"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Name"
                android:inputType="text"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Name"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="text"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion2"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Date of Birth"
                android:inputType="date"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Date_of_Birth"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="date"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion3"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Mobile No"
                android:inputType="number"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Mobile_No"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="number"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion4"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Email"
                android:inputType="text"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion5"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Confirm Email"
                android:inputType="text"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Confirm_Email"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion6"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/textQuestion101"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                android:layout_width="320dp"
                android:layout_height="1dp"
                android:layout_marginStart="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="26dp"
                android:layout_marginBottom="8dp"
                android:layout_weight="1"
                android:gravity="center"
                android:hint="Confirm Password"
                android:inputType="text"
                android:textColorHint="#FD7642"
                app:boxStrokeWidth="1dp"
                app:helperTextTextColor="@color/white"
                app:hintTextColor="@color/orange"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/Confirm_Password"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:backgroundTint="@color/orange"
                    android:drawablePadding="10dp"
                    android:ems="10"
                    android:gravity="top|left"
                    android:inputType="textPassword"
                    android:paddingLeft="15dp"
                    android:paddingTop="12dp"
                    android:paddingBottom="10dp"
                    android:singleLine="false"
                    android:textColor="#FD7642"
                    android:textColorHint="#FD7642"
                    android:textSize="18sp"
                    app:passwordToggleEnabled="true" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:layout_marginTop="44dp"
            android:background="@drawable/heading"
            android:gravity="center"
            android:shadowColor="@color/black"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:text="Send Me Gas Engineer"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/Registerbutton"
        android:layout_width="150dp"
        android:layout_height="58dp"
        android:backgroundTint="@color/orange"
        android:elevation="10dp"
        android:text="Register"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:theme="@style/Theme.MaterialComponents.Light"
        app:cornerRadius="10dp"
        android:layout_marginTop="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1012"
        app:layout_constraintVertical_bias="0.411"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="94dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Enter Details for Registration"
        android:textAlignment="center"
        android:textColor="@color/orange"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


        <TextView
            android:id="@+id/txt1"
            android:layout_width="62dp"
            android:layout_height="35dp"
            android:gravity="center"
            android:text="Want to"
            android:textColor="@color/orange"
            android:textSize="17dp"
            app:layout_constraintBottom_toTopOf="@+id/Registerbutton"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.366"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout1012"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/txt2"
            android:layout_width="85dp"
            android:layout_height="33dp"
            android:clickable="true"
            android:gravity="center"
            android:text="Sign in?"
            android:textColor="@color/orange"
            android:textSize="20dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/txt1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.598"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txt1"
            app:layout_constraintVertical_bias="0.514" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>